                    "commandTimeout": "00:20:00"
                },
                "linkedServiceName": {
                    "referenceName": "idpay-Kusto-idpay-ls",
                    "type": "LinkedServiceReference"
                }
            },
            {
                "name": "Convert Date",
                "type": "AzureDataExplorerCommand",
                "dependsOn": [
                    {
                        "activity": "Copy wallet collection",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "command": ".set-or-replace wallet<|\nwallet\n| extend \n    acceptanceDate= unixtime_milliseconds_todatetime(tolong(acceptanceDateString)),\n    initiativeEndDate= unixtime_milliseconds_todatetime(tolong(initiativeEndDateString)),\n    voucherStartDate= unixtime_milliseconds_todatetime(tolong(voucherStartDateString)),\n    voucherEndDate= unixtime_milliseconds_todatetime(tolong(    voucherEndDateString)),\n    requestUnsubscribeDate= unixtime_milliseconds_todatetime(tolong(requestUnsubscribeDateString)),\n    updateDate= unixtime_milliseconds_todatetime(tolong(updateDateString)),\n    lastCounterUpdate= unixtime_milliseconds_todatetime(tolong(lastCounterUpdateString)),\n   suspensionDate= unixtime_milliseconds_todatetime(tolong(suspensionDateString))",
                    "commandTimeout": "00:20:00"
                },
