                "typeProperties": {
                    "command": ".set-or-replace wallet_refund_history <|\nwallet\n| extend refundMap = parse_json(refundHistory)\n| mv-expand key = bag_keys(refundMap)\n| extend key = tostring(key)\n| extend refundData = refundMap[key]\n| project walletId = id, key, feedbackProgressive = tolong(refundData.feedbackProgressive)",
                    "commandTimeout": "00:20:00"
                },
