{
  "name": "idpay_copy_rdb_products_to_csv",
  "properties": {
    "parameters": {
      "funcUrl": {
        "type": "String",
        "defaultValue": "https://fa-idpay-ses-mailer.azurewebsites.net/api/send_email"
      },
      "funcKey": {
        "type": "SecureString"
      }
    },
    "activities": [
      {
        "name": "Copy_Cosmos_to_CSV",
        "type": "Copy",
        "dependsOn": [],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "userProperties": [],
        "typeProperties": {
          "source": {
            "type": "CosmosDbMongoDbApiSource",
            "batchSize": 100,
            "filter": "{ \"status\": \"APPROVED\" }",
            "cursorMethods": {
              "project": "{ \"_id\": 1, \"model\": 1, \"brand\": 1, \"eprelCode\": 1, \"countryOfProduction\": 1,\n  \"energyClass\": 1, \"capacity\": 1, \"productName\": 1, \"category\": 1, \"productGroup\": 1 }"
            }
          },
          "sink": {
            "type": "DelimitedTextSink",
            "storeSettings": {
              "type": "AzureBlobStorageWriteSettings",
              "copyBehavior": "FlattenHierarchy"
            },
            "formatSettings": {
              "type": "DelimitedTextWriteSettings",
              "quoteAllText": true,
              "fileExtension": ".txt"
            }
          },
          "enableStaging": false,
          "translator": {
            "type": "TabularTranslator",
            "mapComplexValuesToString": false
          }
        },
        "inputs": [
          { "referenceName": "cosmos_rdb_products", "type": "DatasetReference" }
        ],
        "outputs": [
          { "referenceName": "data_export_csv", "type": "DatasetReference" }
        ]
      },
      {
        "name": "FlussoExportCSV",
        "type": "ExecuteDataFlow",
        "dependsOn": [
          { "activity": "Copy_Cosmos_to_CSV", "dependencyConditions": ["Succeeded"] }
        ],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "userProperties": [],
        "typeProperties": {
          "dataFlow": { "referenceName": "export_flow_csv", "type": "DataFlowReference" },
          "compute": { "coreCount": 8, "computeType": "General" },
          "traceLevel": "Fine"
        }
      },
      {
        "name": "Send_Email_via_Function",
        "type": "WebActivity",
        "dependsOn": [
          { "activity": "FlussoExportCSV", "dependencyConditions": ["Succeeded"] }
        ],
        "typeProperties": {
          "url": "@{pipeline().parameters.funcUrl}",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json",
            "x-functions-key": "@{pipeline().parameters.funcKey}"
          },
          "body": {
            "to": "stefano.delia@pagopa.it",
            "subject": "Esportazione settimanale @{formatDateTime(utcNow(),'yyyy-MM-dd')}",
            "body": "Ciao,\\nIn allegato trovi il CSV generato automaticamente.",
            "container": "export",
            "blob_path": "@{concat('data/export_weekly_', formatDateTime(utcNow(), 'yyyy-MM-dd'), '.csv')}"
          }
        }
      }
    ]
  },
  "type": "Microsoft.DataFactory/factories/pipelines"
}
