{
    "name": "idpay_procudt_export_daily",
    "properties": {
        "description": "Export EIE Product on daily schedule",
        "activities": [
            {
                "name": "idpay_product_export_daily",
                "description": "Export EIE Product on daily schedule",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "CosmosDbMongoDbApiSource",
                        "batchSize": 500
                    },
                    "sink": {
                        "type": "JsonSink",
                        "storeSettings": {
                            "type": "AzureBlobStorageWriteSettings"
                        },
                        "formatSettings": {
                            "type": "JsonWriteSettings",
                            "filePattern": "arrayOfObjects"
                        }
                    },
                    "enableStaging": false
                },
                "inputs": [
                    {
                        "referenceName": "cosmos_rdb_products",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "blob_product_export_daily",
                        "type": "DatasetReference"
                    }
                ]
            }
        ],
        "annotations": [
            "Products Export",
            "IdPay",
            "EIE"
        ]
    }
}
